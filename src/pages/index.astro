---
import Layout from "~/layouts/Layout.astro";
import { lucia } from "~/lib/auth";

const { user, session } = Astro.locals;

if (Astro.request.method === "POST" && session) {
  await lucia.invalidateSession(session.id);

  const sessionCookie = lucia.createBlankSessionCookie();
  Astro.cookies.set(
    sessionCookie.name,
    sessionCookie.value,
    sessionCookie.attributes,
  );

  return Astro.redirect("/");
}
---

<Layout title="Astro DB + Lucia">
  <h1>
    <span class="astro-text-gradient">Astro DB</span> + <span
      class="lucia-text-gradient">Lucia</span
    >
  </h1>

  {
    !session ? (
      <a href="/login/github" class="button">
        Sign in with GitHub
      </a>
    ) : (
      <form method="post">
        <button class="button">Sign out</button>
      </form>
    )
  }

  {user && <h2>Hello, {user.username}!</h2>}

  {
    user && (
      <div class="auth-details">
        User: <pre>{JSON.stringify(user)}</pre>
      </div>
    )
  }
  {
    session && (
      <div class="auth-details">
        Session: <pre>{JSON.stringify(session)}</pre>
      </div>
    )
  }
</Layout>

<style>
  .astro-text-gradient {
    background-image: var(--accent-astro-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .lucia-text-gradient {
    background-image: var(--accent-lucia-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    height: 3.5rem;
    padding-inline: 2.5rem;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 9999px;
    background-color: white;
    width: fit-content;
    text-decoration: none;
    color: black;
    transition: background-color 0.2s ease;
    cursor: pointer;
  }
  .button:hover {
    background-color: lightgray;
  }
  .auth-details {
    max-width: inherit;
  }
  pre {
    text-wrap: wrap;
    overflow-wrap: break-word;
  }
</style>
